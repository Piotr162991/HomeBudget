<Window x:Class="HouseBug.Views.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:HouseBug.ViewModels"
        Title="Zarządzanie kategoriami" 
        Height="600" Width="800"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Window.DataContext>
        <vm:CategoryViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Lista kategorii -->
        <Border Grid.Column="0" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                          Text="LISTA KATEGORII" 
                          Style="{StaticResource HeaderLabelStyle}"/>

                <DataGrid Grid.Row="1" 
                         ItemsSource="{Binding Categories}"
                         SelectedItem="{Binding SelectedCategory}"
                         Style="{StaticResource ModernDataGridStyle}"
                         AutoGenerateColumns="False"
                         IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Kolor" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Width="20" Height="20" 
                                           Background="{Binding Color}" 
                                           CornerRadius="10" 
                                           HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Header="Ikona" 
                                          Binding="{Binding Icon}" 
                                          Width="60"/>
                        
                        <DataGridTextColumn Header="Nazwa" 
                                          Binding="{Binding Name}" 
                                          Width="*"/>
                        
                        <DataGridTextColumn Header="Opis" 
                                          Binding="{Binding Description}" 
                                          Width="2*"/>
                        
                        <DataGridCheckBoxColumn Header="Aktywna" 
                                              Binding="{Binding IsActive}" 
                                              Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Dodaj" 
                           Command="{Binding AddCategoryCommand}"
                           Style="{StaticResource SuccessButtonStyle}"
                           Margin="0,0,10,0"/>
                    
                    <Button Content="Usuń" 
                           Command="{Binding DeleteCategoryCommand}"
                           Style="{StaticResource DangerButtonStyle}"
                           Margin="0,0,10,0"/>
                    
                    <Button Content="Odśwież" 
                           Command="{Binding RefreshCommand}"
                           Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Formularz edycji -->
        <Border Grid.Column="2" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                          Text="EDYCJA KATEGORII" 
                          Style="{StaticResource HeaderLabelStyle}"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel IsEnabled="{Binding IsEditMode}">
                        <!-- Nazwa -->
                        <TextBlock Text="Nazwa:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                Style="{StaticResource ModernTextBoxStyle}"
                                MaxLength="50"/>

                        <!-- Opis -->
                        <TextBlock Text="Opis:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                Style="{StaticResource ModernTextBoxStyle}"
                                MaxLength="200"
                                Height="60"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"/>

                        <!-- Kolor -->
                        <TextBlock Text="Kolor:" Style="{StaticResource LabelStyle}"/>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" 
                                    Text="{Binding Color, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource ModernTextBoxStyle}"
                                    Margin="0,0,10,0"/>
                            
                            <Border Grid.Column="1" 
                                   Width="30" Height="30" 
                                   Background="{Binding Color}" 
                                   CornerRadius="4" 
                                   BorderBrush="{StaticResource BorderBrush}" 
                                   BorderThickness="1"/>
                        </Grid>

                        <!-- Paleta kolorów -->
                        <TextBlock Text="Wybierz kolor:" Style="{StaticResource LabelStyle}"/>
                        <ItemsControl ItemsSource="{Binding PredefinedColors}" Margin="5">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Width="25" Height="25" 
                                           Background="{Binding}"
                                           BorderThickness="1"
                                           BorderBrush="{StaticResource BorderBrush}"
                                           Margin="2"
                                           Command="{Binding DataContext.SelectColorCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                           CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Ikona -->
                        <TextBlock Text="Ikona:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding Icon, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource ModernTextBoxStyle}"/>

                        <!-- Paleta ikon -->
                        <TextBlock Text="Wybierz ikonę:" Style="{StaticResource LabelStyle}"/>
                        <ItemsControl ItemsSource="{Binding PredefinedIcons}" Margin="5">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding}"
                                           Width="30" Height="30"
                                           FontSize="16"
                                           Margin="2"
                                           Style="{StaticResource PrimaryButtonStyle}"
                                           Command="{Binding DataContext.SelectIconCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                           CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Aktywna -->
                        <CheckBox Content="Kategoria aktywna" 
                                 IsChecked="{Binding IsActive}"
                                 Style="{StaticResource ModernCheckBoxStyle}"
                                 Margin="5,15,5,5"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Komunikat walidacji -->
                <TextBlock Grid.Row="1" 
                          Text="{Binding ValidationMessage}"
                          VerticalAlignment="Bottom"
                          Margin="0,10"
                          TextWrapping="Wrap"
                          FontWeight="SemiBold">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ValidationMessage}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ValidationMessage}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Przyciski -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Zapisz" 
                           Command="{Binding SaveCategoryCommand}"
                           Style="{StaticResource SuccessButtonStyle}"
                           Margin="0,0,10,0"/>
                    
                    <Button Content="Anuluj" 
                           Command="{Binding CancelEditCommand}"
                           Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading overlay -->
        <Grid Grid.ColumnSpan="3" 
              Background="#80000000" 
              Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="White" 
                   CornerRadius="8" 
                   Padding="30" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center">
                <StackPanel>
                    <ProgressBar IsIndeterminate="True" 
                                Height="20" 
                                Width="200" 
                                Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding BusyMessage}" 
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>