
<Window x:Class="HouseBug.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:HouseBug.ViewModels"
        mc:Ignorable="d"
        Title="HouseBug - Budżet Domowy" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
                <ResourceDictionary Source="/Resources/DataTemplates.xaml"/>
                <ResourceDictionary Source="/Resources/Icons.xaml"/>
                <ResourceDictionary Source="/Resources/Converters.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu główne -->
        <Menu Grid.Row="0" Background="{StaticResource PrimaryBrush}">
            <MenuItem Header="Plik" Foreground="White">
                <MenuItem Header="Nowa transakcja" Command="{Binding AddTransactionCommand}"/>
                <Separator/>
                <MenuItem Header="Eksportuj do CSV" Command="{Binding ExportToCsvCommand}"/>
                <MenuItem Header="Generuj raport" Command="{Binding GenerateReportCommand}"/>
                <Separator/>
                <MenuItem Header="Zakończ" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Edycja" Foreground="White">
                <MenuItem Header="Edytuj transakcję" Command="{Binding EditTransactionCommand}"/>
                <MenuItem Header="Usuń transakcję" Command="{Binding DeleteTransactionCommand}"/>
                <Separator/>
                <MenuItem Header="Kategorie" Click="CategoriesMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Widok" Foreground="White">
                <MenuItem Header="Odśwież" Command="{Binding RefreshCommand}"/>
                <MenuItem Header="Wyczyść filtry" Command="{Binding ClearFiltersCommand}"/>
            </MenuItem>
            <MenuItem Header="Pomoc" Foreground="White">
                <MenuItem Header="O programie" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- Główna zawartość -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel boczny -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="10,10,5,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Podsumowanie miesięczne -->
                        <TextBlock Text="PODSUMOWANIE MIESIĘCZNE" 
                                  Style="{StaticResource HeaderLabelStyle}"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,15"/>

                        <!-- Nawigacja miesięczna -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" 
                                   Content="◀" 
                                   Command="{Binding ShowPreviousMonthCommand}"
                                   Style="{StaticResource PrimaryButtonStyle}"
                                   Width="30" Height="30"
                                   Padding="0"/>

                            <TextBlock Grid.Column="1" 
                                      Text="{Binding SelectedDate, StringFormat='MMMM yyyy'}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      FontWeight="SemiBold"
                                      FontSize="16"/>

                            <Button Grid.Column="2" 
                                   Content="▶" 
                                   Command="{Binding ShowNextMonthCommand}"
                                   Style="{StaticResource PrimaryButtonStyle}"
                                   Width="30" Height="30"
                                   Padding="0"/>
                        </Grid>

                        <!-- Statystyki finansowe -->
                        <Border Background="{StaticResource BackgroundBrush}" 
                               CornerRadius="4" 
                               Padding="10" 
                               Margin="0,0,0,15">
                            <StackPanel>
                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Przychody:" Foreground="{StaticResource MutedTextBrush}"/>
                                    <TextBlock Grid.Column="1" 
                                              Text="{Binding TotalIncome, StringFormat=C}" 
                                              Foreground="{StaticResource SuccessBrush}"
                                              FontWeight="SemiBold"/>
                                </Grid>

                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Wydatki:" Foreground="{StaticResource MutedTextBrush}"/>
                                    <TextBlock Grid.Column="1" 
                                              Text="{Binding TotalExpenses, StringFormat=C}" 
                                              Foreground="{StaticResource DangerBrush}"
                                              FontWeight="SemiBold"/>
                                </Grid>

                                <Separator Margin="0,5"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Saldo:" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" 
                                              Text="{Binding Balance, StringFormat=C}" 
                                              FontWeight="Bold"
                                              FontSize="16">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Balance, Converter={StaticResource GreaterThanZeroConverter}}" Value="True">
                                                        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Balance, Converter={StaticResource GreaterThanZeroConverter}}" Value="False">
                                                        <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Filtry -->
                        <TextBlock Text="FILTRY" 
                                  Style="{StaticResource HeaderLabelStyle}"
                                  Margin="0,10,0,10"/>

                        <TextBlock Text="Kategoria:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox ItemsSource="{Binding Categories}"
                                 SelectedItem="{Binding SelectedCategoryFilter}"
                                 Style="{StaticResource ModernComboBoxStyle}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="12" Height="12" 
                                               Background="{Binding Color}" 
                                               CornerRadius="6" 
                                               Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Name}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Text="Wyszukaj:" Style="{StaticResource LabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource ModernTextBoxStyle}"
                                ToolTip="Wyszukaj w opisie lub kategorii"/>

                        <!-- Przyciski akcji -->
                        <StackPanel Margin="0,20,0,0">
                            <Button Command="{Binding AddTransactionCommand}"
                                   Style="{StaticResource SuccessButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="➕" Margin="0,0,5,0"/>
                                    <TextBlock Text="Dodaj transakcję"/>
                                </StackPanel>
                            </Button>

                            <Button Click="CategoriesMenuItem_Click"
                                   Style="{StaticResource PrimaryButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📁" Margin="0,0,5,0"/>
                                    <TextBlock Text="Kategorie"/>
                                </StackPanel>
                            </Button>

                            <Button Command="{Binding GenerateReportCommand}"
                                   Style="{StaticResource PrimaryButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📊" Margin="0,0,5,0"/>
                                    <TextBlock Text="Raport"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                         HorizontalAlignment="Stretch" 
                         Background="{StaticResource BorderBrush}"/>

            <!-- Lista transakcji -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="5,10,10,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Nagłówek listy -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                  Text="LISTA TRANSAKCJI" 
                                  Style="{StaticResource HeaderLabelStyle}"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Command="{Binding EditTransactionCommand}"
                                   Style="{StaticResource PrimaryButtonStyle}"
                                   Margin="0,0,5,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✏️" Margin="0,0,5,0"/>
                                    <TextBlock Text="Edytuj"/>
                                </StackPanel>
                            </Button>

                            <Button Command="{Binding DeleteTransactionCommand}"
                                   Style="{StaticResource DangerButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🗑️" Margin="0,0,5,0"/>
                                    <TextBlock Text="Usuń"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- DataGrid z transakcjami -->
                    <DataGrid Grid.Row="1" 
                             ItemsSource="{Binding Transactions}"
                             SelectedItem="{Binding SelectedTransaction}"
                             Style="{StaticResource ModernDataGridStyle}"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Data" 
                                              Binding="{Binding Date, StringFormat=dd.MM.yyyy}" 
                                              Width="100"/>
                            
                            <DataGridTemplateColumn Header="Kategoria" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Border Width="12" Height="12" 
                                                   Background="{Binding Category.Color}" 
                                                   CornerRadius="6" 
                                                   Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding Category.Name}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <DataGridTextColumn Header="Opis" 
                                              Binding="{Binding Description}" 
                                              Width="*"/>
                            
                            <DataGridTemplateColumn Header="Kwota" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FormattedAmount}" 
                                                  FontWeight="SemiBold"
                                                  HorizontalAlignment="Right">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsIncome}" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsIncome}" Value="False">
                                                            <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Informacja o braku danych -->
                    <TextBlock Grid.Row="1" 
                              Text="Brak transakcji do wyświetlenia"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              FontSize="16"
                              Foreground="{StaticResource MutedTextBrush}"
                              Visibility="{Binding Transactions.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Status bar -->
        <StatusBar Grid.Row="2" Background="{StaticResource BackgroundBrush}">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" 
                          Foreground="{StaticResource TextBrush}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Transakcji: " Foreground="{StaticResource MutedTextBrush}"/>
                    <TextBlock Text="{Binding Transactions.Count}" FontWeight="SemiBold"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <!-- Loading overlay -->
        <Grid Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="White" 
                   CornerRadius="8" 
                   Padding="30" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center">
                <StackPanel>
                    <ProgressBar IsIndeterminate="True" 
                                Height="20" 
                                Width="200" 
                                Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding BusyMessage}" 
                              HorizontalAlignment="Center" 
                              FontSize="14"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>